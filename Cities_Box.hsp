						}
					loop
				}
			}
			//中学校（13〜15歳）
			if age_in_Residential(cnt) >= 13 and age_in_Residential(cnt) <= 15 and gi_j >= 1 {
				new_school_rnd = rnd(gi_j)	; 学校はランダムに決める
