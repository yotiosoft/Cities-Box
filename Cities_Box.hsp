						name(sx,sy,sz,cnt) = name(sx,sy,sz,cnt+2)
						obj_type(sx,sy,sz,cnt) = obj_type(sx,sy,sz,cnt+2)
						obj_dire(sx,sy,sz,cnt) = obj_dire(sx,sy,sz,cnt+2)
